$refactorit-red: #ed1a33;
$refactorit-gray: #666666;


// home

@media only screen and (max-width: 40em) {
.cover-photo {
  height: 10em;
  }
}

@media only screen and (min-width: 40em) {
.cover-photo {
  height: 25em;
  }
}

.cover-photo {
  // @include grid-column;
  background-color: light-gray;
  }

// team
.team
  h5 {
    margin: 0.5em 0 -0.3em;
  }
  p {
    margin: 0.5em 0;
  }

.member-box {
  padding-bottom: 1.5em;
  margin-top: 3em;
}

.social-icons {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  a {
    padding: 0 0.3em;
  }
}

.team-wrap {
  min-height: 34em;
  position: relative;
}

.main-back {
  background: no-repeat center/100% url("<%= asset_path 'r-back.jpg' %>");
}

// blog

.category-icon {
  margin-top: 0.5em;
  img {
    margin: 0 auto;
  }
  .fi-monitor {
    color: #ed1a33;
    font-size: 1.7em;
  }
}

.blog-list .menu-text:not(:first-child) {
  padding-top: 1.5em;
}

// contact

.required abbr {
  margin-left: -0.7em;
  border-bottom: none;
  color: $refactorit-red;
}

