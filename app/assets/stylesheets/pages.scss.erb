$refactorit-red: #ed1a33;
$refactorit-gray: #666666;


// home

@media only screen and (max-width: 40em) {
.cover-photo {
  height: 10em;
  }
.hero-title {
  margin-top: 2em;
}
}

@media only screen and (min-width: 40em) {
.cover-photo {
  height: 21em;
  }
.hero-title {
  margin-top: 5em;
}
}

.testimonials cite{
  margin-bottom: 1.5em;
}

.category-icon img {
  height: 30px;
  width: 30px;
}

.overlay-box {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.overlay-effect:hover .overlay-content {
  opacity: 1;
}

.overlay-effect:hover img {
  filter: contrast(90%);
  -webkit-filter: contrast(90%);
  filter: grayscale(100%);
  -webkit-filter: grayscale(100%);
  transform: scale(1.5);
  opacity: 0.3;
}

.overlay-content {
  height: 100%;
  width: 100%;
  position: absolute;
  overflow: hidden;
  top: 0;
  left: 0;
  opacity: 0;
  transition: all 0.4s ease-in-out;
  color: $refactorit-red;
  z-index: -1;
}

.headline-shot {
  font-family:'Roboto Slab', serif;
  font-weight: 900;
  font-size: 2em;
  line-height: 1;
  .text-left {
    line-height: 1.1;
  }
}

.d-stats {
  position: absolute;
  bottom: 0;
  margin-bottom: 1em;
}
// dribbble

.thumbnail {
  box-shadow: none;
}

// team
.team
  h5 {
    margin: 0.5em 0 -0.3em;
  }
  p {
    margin: 0.5em 0;
  }

.member-box {
  padding-bottom: 1.5em;
  margin-top: 3em;
}

.social-icons {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  a {
    padding: 0 0.3em;
  }
}

.team-wrap {
  min-height: 34em;
  position: relative;
}

.main-back {
  background: repeating-radial-gradient(
    circle,
    #E0E0E0,
    #E0E0E0 10px,
    #E5E5E5 10px,
    #E5E5E5 20px
  );
}

// blog

.category-icon {
  margin-top: 0.5em;
  img {
    margin: 0 auto;
  }
  .fi-monitor {
    color: #ed1a33;
    font-size: 1.7em;
  }
}

.blog-list .menu-text:not(:first-child) {
  padding-top: 1.5em;
}

.blogpost {
  font-size: 1.2em;
  font-family: 'Fira', sans-serif;
  margin: 0.5em 0 1em 0;
}

.blogpost-preview {
  margin:0 0 2.3em;
}

.blogpost-author {
  line-height: 5;
}

// contact

.required abbr {
  margin-left: -0.7em;
  border-bottom: none;
  color: $refactorit-red;
}
